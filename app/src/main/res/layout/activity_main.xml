<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAC5B0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputDescriptionTextView"
        android:layout_width="332dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:text="Evaluate"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/expr1EditText"
        android:layout_width="371dp"
        android:layout_height="54dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:background="#F4FAB0"
        android:gravity="center"
        android:hint="Enter Expression 1"
        android:textColor="@android:color/black"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/expr2EditText"
        android:layout_width="371dp"
        android:layout_height="54dp"
        android:layout_below="@id/expr1EditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#F4FAB0"
        android:gravity="center"
        android:textColorHint="#000000"
        android:hint="Enter Expression 2"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/evaluateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evaluate"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@id/expr2EditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <WebView
        android:id="@+id/resultWebView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:textColor="@android:color/black"
        android:background="#FAC5B0"
        android:layout_below="@id/evaluateButton"/>

</RelativeLayout>
